int reverse(int x) {
    int input=x;
    long result=0;
    int sign=0;
    
    if(input < 0){
        sign = 1;
        input = -1*input;
    }
    
    while(input>0){
        result = result*10 + input%10;
        input = input/10;
    }
    
    if(result > 2147483647)
        return 0;
    
    if(sign == 1){
        result = -1*result;
    }
    
    
    
    return result;
}
